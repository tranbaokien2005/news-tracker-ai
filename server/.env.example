# Server
PORT=5051
NODE_ENV=development

# CORS (cho phép client chạy trên localhost:5500 hoặc 127.0.0.1:5500)
CORS_ALLOWED_ORIGINS=http://127.0.0.1:5500,http://localhost:5500

# Cache TTL (giây)
NEWS_CACHE_TTL=900        # 15 phút cache news RSS
SUMMARIZE_CACHE_TTL=86400 # 1 ngày cache summary

# AI (nếu dùng OpenAI để summarize/recommend)
AI_PROVIDER=openai
AI_MODEL=gpt-4o-mini
AI_API_KEY=YOUR_API_KEY_HERE

# Rate limit
RATE_LIMIT_PER_MIN=5

# RSS Sources (ghi đè DEFAULT_SOURCES trong code nếu muốn)
# Reuters feeds đã chết → bạn đổi thành nguồn sống như The Verge, BBC, MarketWatch, Aljazeera
NEWS_SOURCES=tech:theverge,bbc,hackernews;finance:marketwatch-top,marketwatch-rt;world:bbc,aljazeera

# Page size (mặc định 30, max 100)
NEWS_PAGE_SIZE=30

VALIDATE_TOPIC_STRICT=false   # true => trả 400 nếu topic sai, false => fallback về tech
