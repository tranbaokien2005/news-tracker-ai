# Server
PORT=5051
NODE_ENV=development

# CORS
CORS_ALLOWED_ORIGINS=http://127.0.0.1:5500,http://localhost:5500

# Cache TTL (gi√¢y)
NEWS_CACHE_TTL=900
SUMMARIZE_CACHE_TTL=86400

# AI
AI_PROVIDER=openai
AI_MODEL=gpt-4o-mini
OPENAI_API_KEY=YOUR_API_KEY_HERE

# Rate limit
AI_RATE_MAX=5
AI_RATE_WINDOW_MS=60000

# Input limit
MAX_SUMMARY_INPUT_CHARS=8000
DEFAULT_SUMMARY_MODE=bullets
DEFAULT_SUMMARY_LANG=en

# RSS Sources
NEWS_SOURCES=tech:theverge,bbc,hackernews;finance:marketwatch-top,marketwatch-rt;world:bbc,aljazeera

# Page size
NEWS_PAGE_SIZE=30

# Topic strict
VALIDATE_TOPIC_STRICT=false
